<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:textAlignment="center"
    android:background="#fffffd00"
    android:id="@+id/llay">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" "
        android:id="@+id/textView3"
        android:maxLines="3"
        android:textAlignment="center"
        android:background="#ff007ad8"
        android:textAllCaps="false"
        android:textColor="#ffffffff"
        android:textSize="50dp"
        android:gravity="center"
        android:textStyle="italic" />

    <GridLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <ImageView

            android:id="@+id/imageLeft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrowleftdark" />


        <ImageView

            android:id="@+id/imageRight"
            android:layout_width="230dp"

            android:layout_height="230dp"
            android:scaleType="fitCenter"
            android:layout_gravity="fill"
            android:src="@drawable/amelie1" />



        <ImageView

            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrowrightdark" />






    </GridLayout>

    <android.gesture.GestureOverlayView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gV"
        android:layout_gravity="center_horizontal"></android.gesture.GestureOverlayView>


</LinearLayout>

